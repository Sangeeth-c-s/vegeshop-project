<%- include('../layouts/proheader') %>


    <form action="/admin/Coupons" method="post" class="my-auto" style="height: 90vh;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card bg-transparent" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add-<span
                                            class="text-main-1">Coupons</span></p>

                                    <form class="mx-1 mx-md-4">

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">Coupon  Name</label>
                                                <input type="text" id="form3Example1c" class="form-control" name="name"
                                                    value="" required />

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example3c">Offer Type</label>
                                                    <select class="form-control" id="exampleFormControlSelect1" name="offertype">
                                                        <option>Cash-Back</option>
                                                        <option>Discount</option>
                                                        <option>Buy one Get one</option>
                                                        
                                                        
                                                    </select>

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">Offer</label>
                                                <input type="number" id="form3Example1c" class="form-control"
                                                    name="offer" value="" required />

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example1c">valid Upto</label>
                                                <input type="number" id="form3Example1c" class="form-control"
                                                    name="valid" value="" required />

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Offer
                                                    Description</label>
                                                <input type="text" id="form3Example4c" class="form-control"
                                                    name="description" value="" required />

                                            </div>
                                        </div>

                                         <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Offer
                                                    Code</label>
                                                <input type="text" id="form3Example4c" class="form-control"
                                                    name="code" value="" required />

                                            </div>
                                        </div>

                                        

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="hidden" name="id" value="">
                                            <button type="submit" value="Register"
                                                class="btn btn-primary btn-lg">Save Coupon</button>
                                            <a href="/admin/home/" class="btn btn-primary ml-2 btn-lg">Go
                                                Back</a>
                                        </div>

                                    </form>

                                </div>
                                <% if(typeof message !=='undefined' ){%>
                                            <p style="color:green">
                                                <%= message %>
                                            </p>
                                            <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </form>

    <%- include('../layouts/profooter') %>