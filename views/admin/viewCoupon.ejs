<%- include('../layouts/adminHeader') %>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">


                        <div class="content table-responsive table-full-width">
                            <div class="container">
                                <a href="/admin/coupons" class="btn btn-primary ms-2 btn-lg">Add Coupons</a>
                                <div class="row">
                                    <table id="example" class="table text-dark table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Name</th>
                                                <th>offer</th>
                                                <th>offerType</th>
                                                <th>valid</th>
                                                <th>Description</th>
                            
                            
                                                <th></th>
                                                <th></th>
                            
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(coupons.length> 0){
                                                for(let i = 1;i <= coupons.length; i++){ %>
                                                    <tr>
                                                        <td>
                                                            <%= i %>
                                                        </td>
                                                        <td>
                                                            <%= coupons[i-1].name %>
                                                        </td>
                                                        <td>
                                                            <%= coupons[i-1].offer %>
                                                        </td>
                                                        <td>
                                                            <%= coupons[i-1].offertype %>
                                                        </td>
                                                        <td>
                                                            <%= coupons[i-1].valid %>
                                                        </td>
                                                        <td>
                                                            <%= coupons[i-1].description %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/admin-cancel-coupon?id=<%= coupons[i-1]._id %>"
                                                                class="btn btn-danger mb-1">Cancel Coupon</a>
                                                            <a href="/admin/admin-confirm-coupon?id=<%= coupons[i-1]._id %>"
                                                                class="btn btn-success ">Confirm </a>
                                                            <a href="/admin/admin-delete-coupon?id=<%= coupons[i-1]._id %>"
                                                                class="btn btn-danger ">Delete Coupon</a>
                            
                                                        </td>
                            
                                                    </tr>
                                                    <% } } else{ %>
                                                        <tr>
                                                            <td>Users Not Found</td>
                                                        </tr>
                                                        <% } %>
                                        </tbody>
                            
                            
                            
                            
                            
                            
                            
                            
                            
                                    </table>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>


                <footer class="footer">
                    <div class="container-fluid">
                        <nav class="pull-left">
                            <ul>
                                <li>
                                    <a href="#">
                                        Home
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Company
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Portfolio
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Blog
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <p class="copyright pull-right">
                            &copy;
                            <script>document.write(new Date().getFullYear())</script> <a
                                href="http://www.creative-tim.com">Creative
                                Tim</a>, made with love for a better web
                        </p>
                    </div>
                </footer>

            </div>
        </div>


        </body>

        <!--   Core JS Files   -->
        <script src="assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
        <script src="assets/js/bootstrap.min.js" type="text/javascript"></script>

        <!--  Charts Plugin -->
        <script src="assets/js/chartist.min.js"></script>

        <!--  Notifications Plugin    -->
        <script src="assets/js/bootstrap-notify.js"></script>

        <!--  Google Maps Plugin    -->
