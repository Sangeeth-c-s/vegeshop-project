<%- include('../layouts/adminHeader') %>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Users List</h4>
                                    
                                </div>
                                <form class="input-group">
                                    <div class="form-outline" >
                                        <input type="search" name="search" class="form-control" style="background-color:darkgrey ;">
                                    
                                    <input type="submit" class="text-success">
                                    </div>
                                </form>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            
                                            
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <% if(users.length> 0){
                                                    for(let i = 1;i <= users.length; i++){ %>
                                                        <tr>
                                                            <td>
                                                                <%= i %>
                                                            </td>
                                                            <td>
                                                                <%= users[i-1].name %>
                                                            </td>
                                                            <td>
                                                                <%= users[i-1].email %>
                                                            </td>
                                                            
                                                            <td><a href="/admin/block-user?id=<%= users[i-1]._id %>" class="btn btn-primary ms-2 ">
                                                                    <% if(users[i-1].isVerified) { %>
                                                                        Block
                                                                        <% }else{ %>
                                                                            Unblock
                                                                            <% } %>
                                                                </a></td>
                                                
                                                        </tr>
                                                        <% } } else{ %>
                                                            <tr>
                                                                <td>Users Not Found</td>
                                                            </tr>
                                                            <% } %>
                                            </tr>
                                            

                                           
                                        </tbody>
                                       
                                            
                                        
                                    </table>

                                    <div>
                                        <%if (currentpage) { %>
                                        
                                        
                                            <%if (currentpage>0){%>
                                                <li><a href="?page=<%=currentpage-1 %>">&lt;</a></li>
                                                <%}%>
                                                    <%for (let j=1; j <=totalpages; j++) { %>
                                        
                                                        <a href="?page=<%= j %>">
                                                            <li><span>
                                                                    <%= j %>
                                                                </span></li>
                                                        </a>
                                                        <% } %>
                                        
                                                            <%if (currentpage < totalpages) { %>
                                                                <li><a href="?page=<%= currentpage+1 %>">&gt;</a></li>
                                                                <%}%>
                                                                    <% } %>
                                        
                                        </div>
                                        
                                            
                                        
                                   
                                    
                                               
            
                                </div>
                            </div>
                        </div>
            
            
                      
            
            
                    </div>
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Company
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Portfolio
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a
                            href="http://www.creative-tim.com">Creative Tim</a>, made with love for a better web
                    </p>
                </div>
            </footer>

        </div>
    </div>


</body>

